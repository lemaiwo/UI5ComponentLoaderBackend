<mvc:View                                                                                                                                                                                                                                                      
    controllerName="be.wl.listcomponent2.controller.App"                                                                                                                                                                                                       
    xmlns:mvc="sap.ui.core.mvc"                                                                                                                                                                                                                                
    displayBlock="true"                                                                                                                                                                                                                                        
	height="100%"                                                                                                                                                                                                                                                 
   	xmlns:m="sap.m"                                                                                                                                                                                                                                            
	xmlns="sap.f">                                                                                                                                                                                                                                                
	<DynamicPage>                                                                                                                                                                                                                                                 
		<title>                                                                                                                                                                                                                                                      
			<DynamicPageTitle>                                                                                                                                                                                                                                          
				<heading>                                                                                                                                                                                                                                                  
					<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">                                                                                                                                                                                           
						<m:Title text="{i18n>title}" wrapping="true" class="sapUiTinyMarginEnd"/>                                                                                                                                                                                
					</m:FlexBox>                                                                                                                                                                                                                                              
				</heading>                                                                                                                                                                                                                                                 
			</DynamicPageTitle>                                                                                                                                                                                                                                         
		</title>                                                                                                                                                                                                                                                     
		<content>                                                                                                                                                                                                                                                    
			<m:List items="{/BusinessPartnerSet}" selectionChange=".onSelectionChange" mode="SingleSelectMaster">                                                                                                                                                       
				<m:StandardListItem type="Active" title="{CompanyName}" description="{BusinessPartnerID}" iconDensityAware="false" iconInset="false" />                                                                                                                    
			</m:List>                                                                                                                                                                                                                                                   
		</content>                                                                                                                                                                                                                                                   
	</DynamicPage>                                                                                                                                                                                                                                                
</mvc:View>                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               